{% extends 'base.html.twig' %}

{% block title %}Hello ConcertController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h2>Liste des concerts passés :</h2>
    <ul>
        {% for concert in concertsPassed %}
            <li>Le concert <strong>{{concert.name}}</strong> est passé le <strong>{{concert.date|date("d/m/Y à H:i:s")}}</strong></li>
        {% endfor %}
    </ul>

    <h2>Liste des concerts à venir :</h2>
    <ul>
        {% for concert in concertsComing %}
            <li>Le concert <strong>{{concert.name}}</strong> est prévu le <strong>{{concert.date|date("d/m/Y à H:i:s")}}</strong></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
