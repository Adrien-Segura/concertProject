{% extends 'base.html.twig' %}

{% block title %}
  Concerts
{% endblock %}

{% block body %}
  <div class="example-wrapper">
    <h1>
      Liste des concerts:
    </h1>
    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('concert_create') }}" class="btn btn-success">
        Cr√©er un nouveau concert
      </a>
    {% endif %}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">
            Concert
          </th>
          <th scope="col">
            Groupes
          </th>
          <th scope="col">
            Artistes
          </th>
          <th scope="col">
            Date
          </th>
          <th scope="col">
            Action
          </th>
          {% if is_granted('ROLE_ADMIN') %}
            <th scope="col">
              Attention !
            </th>
          {% endif %}
        </tr>
      </thead>
      <tbody>
        {% for concert in concerts %}
          <tr>
            <td>
              {{ concert.name }}
            </td>
            <td>
              {{ concert.bands.count() }}
            </td>
            <td>
              {{ concert.members.count() }}
            </td>
            <td>
              {{ concert.date|date('d-m-Y') }}
            </td>
            <td>
              <a href="{{
                path(
                  'show_concert',
                  {
                    id: concert.id
                  }
                )
                }}"
                class="btn btn-primary">
                Voir
              </a>
              {% if is_granted('ROLE_ADMIN') %}
                <a href="{{
                  path(
                    'concert_update',
                    {
                      id: concert.id
                    }
                  )
                  }}"
                  class="btn btn-info">
                  Modifier
                </a>
              {% endif %}
            </td>
            <td>
              {% if is_granted('ROLE_ADMIN') %}
                <a href="{{
                  path(
                    'concert_delete',
                    {
                      id: concert.id
                    }
                  )
                  }}"
                  class="btn btn-danger">
                  Supprimer
                </a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
