{% extends 'base.html.twig' %}

{% block title %}
  Room
{% endblock %}

{% block body %}
  <h1>
    Room
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          Id
        </th>
        <td>
          {{ room.id }}
        </td>
      </tr>
      <tr>
        <th>
          Places_number
        </th>
        <td>
          {{ room.placesNumber }}
        </td>
      </tr>
      <tr>
        <th>
          Name
        </th>
        <td>
          {{ room.name }}
        </td>
      </tr>
      <tr>
        <th>
          Adresse
        </th>
        <td>
          <a target="_blank" href="https://maps.google.com/?q={{room.adresse}}"/>{{room.adresse}}</a>
        </td>
      </tr>
      <tr>
        <th>
          Picture
        </th>
        <td>
          <img class="w-25"
            src="{{ asset(room.picture.url) }}"
            alt="{{ room.picture.alternativeName }}" />
        </td>
      </tr>
    </tbody>
  </table>
  {% if is_granted('ROLE_ADMIN') %}
    <div class="d-flex">
      <a href="{{ path('room_index') }}" class="btn btn-outline-warning mr-5">
        < Retourner Ã  la liste
      </a>

      <a href="{{
        path(
          'room_edit',
          {
            id: room.id
          }
        )
        }}"
        class="btn btn-info mr-5">
        Modifier
      </a>

      {{ include('room/_delete_form.html.twig') }}
    </div>
  {% endif %}
{% endblock %}
