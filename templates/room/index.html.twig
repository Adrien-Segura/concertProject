{% extends 'base.html.twig' %}

{% block title %}
  Room index
{% endblock %}

{% block body %}
  <h1>
    Room index
  </h1>
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('room_new') }}" class="btn btn-success">
      Cr√©er une nouvelle salle
    </a>
  {% endif %}
  <table class="table">
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Nombre de place
        </th>
        <th>
          Nom
        </th>
        <th>
          Adresse
        </th>
        <th>
          Actions
        </th>
        <th>
          Attention !
        </th>
      </tr>
    </thead>
    <tbody>
      {% for room in rooms %}
        <tr>
          <td>
            {{ room.id }}
          </td>
          <td>
            {{ room.placesNumber }}
          </td>
          <td>
            {{ room.name }}
          </td>
          <td>
            <a target="_blank" href="https://maps.google.com/?q={{room.adresse}}"/>{{room.adresse}}</a>
          </td>
          <td>
            <a href="{{
              path(
                'room_show',
                {
                  id: room.id
                }
              )
              }}"
              class="btn btn-primary mr-2">
              Voir
            </a>
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{
                path(
                  'room_edit',
                  {
                    id: room.id
                  }
                )
                }}"
                class="btn btn-info mr-2">
                Modifier
              </a>
            {% endif %}
          </td>
          <td>
            {% if is_granted('ROLE_ADMIN') %}
              {{ include('room/_delete_form.html.twig') }}
            {% endif %}
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">
            no records found
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
