{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block body %}
    <h1>Band</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ band.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ band.name }}</td>
            </tr>
            <tr>
