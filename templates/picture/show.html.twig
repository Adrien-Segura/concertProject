{% extends 'base.html.twig' %}

{% block title %}
  Picture
{% endblock %}

{% block body %}
  <h1>
    Picture
  </h1>

  <table class="table">
    <tbody>
      <tr>
        <th>
          Id
        </th>
        <td>
          {{ picture.id }}
        </td>
      </tr>
      <tr>
        <th>
          Name
        </th>
        <td>
          {{ picture.name }}
        </td>
      </tr>
      <tr>
        <th>
          AlternativeName
        </th>
        <td>
          {{ picture.alternativeName }}
        </td>
      </tr>
      <tr>
        <th>
          Picture
        </th>
        <td>
          <img class="w-25"
            src="{{ asset(picture.url) }}"
            alt="{{ picture.alternativeName }}" />
        </td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex">
    <a href="{{ path('picture_index') }}" class="btn btn-outline-warning mr-5">
      < Retourner Ã  la liste
    </a>
    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{
        path(
          'picture_edit',
          {
            id: picture.id
          }
        )
        }}"
        class="btn btn-info mr-5">
        Modifier
      </a>

      {{ include('picture/_delete_form.html.twig') }}
    {% endif %}
  </div>
{% endblock %}
