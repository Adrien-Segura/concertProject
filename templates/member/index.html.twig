{% extends 'base.html.twig' %}

{% block title %}Member index{% endblock %}

{% block body %}
    <h1>Member index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
                <th>Attention !</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.name }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': member.id}) }}" class="btn btn-primary mr-2">Voir</a>
                    <a href="{{ path('member_edit', {'id': member.id}) }}" class="btn btn-info mr-2">Modifier</a>
                </td>
                <td>
                    {{ include('member/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_new') }}" class="btn btn-success">Cr√©er un nouveau membre</a>
{% endblock %}
